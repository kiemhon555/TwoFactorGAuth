<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <managed-bean>
        <managed-bean-name>userManager</managed-bean-name>
        <managed-bean-class>com.auth.otp.UserManagedBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>authentication</managed-bean-name>
        <managed-bean-class>com.auth.otp.AuthenticationManagedBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>register</managed-bean-name>
        <managed-bean-class>com.auth.otp.RegisterManagedBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <navigation-rule>
        <from-view-id>/login/qrcode.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>login</from-outcome>
            <redirect>true</redirect>
            <to-view-id>/login/login.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>home</from-outcome>
            <redirect>true</redirect>
            <to-view-id>index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>login</from-outcome>
            <redirect>true</redirect>
            <to-view-id>/login/login.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>register</from-outcome>
            <redirect>true</redirect>
            <to-view-id>/login/register.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>user</from-outcome>
            <redirect>true</redirect>
            <to-view-id>/restricted/user.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>error</from-outcome>
            <to-view-id>/login/error.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>edit</from-outcome>
            <redirect>true</redirect>
            <to-view-id>/restricted/edit.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>change</from-outcome>
            <redirect>true</redirect>
            <to-view-id>/restricted/change.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/login/register.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>qrcode</from-outcome>
            <to-view-id>/login/qrcode.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/login/login.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <redirect>true</redirect>
            <to-view-id>/restricted/user.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/restricted/edit.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <redirect>true</redirect>
            <to-view-id>/restricted/user.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/restricted/change.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <redirect>true</redirect>
            <to-view-id>/restricted/user.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
